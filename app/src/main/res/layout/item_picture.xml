<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <ImageView
            android:id="@+id/picture_view"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_margin="5dp"
            android:src="@drawable/modif"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/picture_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            tools:text="Titre d'image"
            app:layout_constraintTop_toBottomOf="@+id/picture_view"
            app:layout_constraintLeft_toLeftOf="@+id/picture_view"
            app:layout_constraintRight_toRightOf="@+id/picture_view"/>

</android.support.constraint.ConstraintLayout>