<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.constraint.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="100dp"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/child_pic"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/child_name"
            android:layout_width="46dp"
            android:layout_height="17dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="72dp"
            android:text="TOTO"
            app:layout_constraintBottom_toBottomOf="@+id/modif_button"
            app:layout_constraintRight_toLeftOf="@+id/modif_button" />


        <ImageView
            android:id="@+id/remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="450dp"
            android:src="@drawable/ic_action_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/child_name"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/modif_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="84dp"
            android:src="@drawable/modif"
            app:layout_constraintEnd_toEndOf="@+id/remove_button"
            app:layout_constraintRight_toLeftOf="@id/remove_button"
            app:layout_constraintTop_toTopOf="@+id/remove_button"/>

</android.support.constraint.ConstraintLayout>